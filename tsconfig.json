{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": "src/",                        
    "baseUrl": ".",
    "strict": true,  

    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "public",
    "dist"
  ]
  ,
  "ts-node": {
    "files": true
  }
}